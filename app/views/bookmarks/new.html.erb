<div class="jumbotron jumbotron-fluid mt-5">
  <div class="container col-6">
    <h3 class="display-4" class="p-2 bg-light border">Add New Bookmark</h3>
    <hr class="my-4">
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.association :movie, as: :select %>
      <%= f.input :comment %>
      <br>
      <%= f.submit  %>
    <% end %>
    <br>
  </div>
</div>
