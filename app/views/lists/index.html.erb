<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://media.istockphoto.com/photos/film-reels-on-black-background-movie-video-and-cinema-prodaction-and-picture-id1336937059?k=20&m=1336937059&s=612x612&w=0&h=x6LbQl2wKDTqQzZCwL8ihiZFEFBfgPh-KcoCLnefRx0=);">
  <div class="container">
    <h1>Discover the world of <strong>movies</strong> !</h1>
    <br>
    <br>
    <a class="btn btn-outline-light" href="#">Find out more</a>
  </div>
</div>
<div class="cards">
  <% @lists.each do |list| %>
    <% if list.photo.attached? %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')"><%= link_to list.name, list_path(list) %></div>
    <% else %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://media.istockphoto.com/photos/old-blank-ticket-picture-id484126086?k=20&m=484126086&s=170667a&w=0&h=q-mmvYp5Qrqo07SySYU5S-x2RGKMqqggu1dcucn0CmE=)">
      </div>
    <% end %>
  <% end %>
</div>
